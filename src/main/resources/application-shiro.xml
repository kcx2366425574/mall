<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- ##########shiro框架配置########## 开始 -->
	
	<!-- 生命周期对象 -->
	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor" />
	
	<!-- shiro的realm类 -->
	<bean id="shiroRealm" class="com.kcx.mall.common.ShiroRealm"/>
	
	<!-- 配置缓存，只会查询一次当前用户的授权，然后放到缓存中，以后都是从缓存中查询当前用户的权限 -->
	<bean id="cacheManager" class="org.apache.shiro.cache.MemoryConstrainedCacheManager" />
	
	<!-- 安全管理器对象 -->
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="cacheManager" ref="cacheManager" />		
		<property name="realm" ref="shiroRealm" />
	</bean>
	
	<!-- 生命周期代理对象 -->
	<bean
		class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"
		depends-on="lifecycleBeanPostProcessor">
		<property name="proxyTargetClass" value="true" />
	</bean>
	
	<!-- 安全认证对象 -->
	<bean
		class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
		<property name="securityManager" ref="securityManager" />
	</bean>
	
	<!-- 配置logout后的跳转页url -->
	<bean id="logoutFilter" class="org.apache.shiro.web.filter.authc.LogoutFilter">
	    <property name="redirectUrl" value="/logout.jsp" />
	</bean>

	
	<!-- id="shiroFilter"必须要和web.xml中过滤器名称保持一致 -->
	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
	
		<property name="securityManager" ref="securityManager" />
		
		<!-- #####以下为可选配置，请按照实际项目需要进行配置#### -->
		<!-- 登陆页的url -->
		<property name="loginUrl" value="/logout.jsp" />
		
		<!-- 登陆成功跳转的页（可选） 
		<property name="successUrl" value="/Main.html" />
		-->
		<!-- 权限验证失败跳转的url -->
		<property name="unauthorizedUrl" value="/failed.jsp" />
		
		<!-- filters属性也是可选的，用来声明一些可以在filterChainDefinitions 里面使用的filter。 如果你声明的filter名称是shiro默认有的，那么将会覆盖默认的filter -->
		<property name="filterChainDefinitions">
			<value>	
				/ = anon
				/login.html = anon
				/manager/login* = anon
				/shop/login* = anon
				/customer/login* = anon
				/css/** = anon
				/images/** = anon				
				/js/** = anon
				/logout.jsp* = anon
				/getVerifiCode = anon
				/auth = anon
				/fonts/* = anon
				
				<!-- 最高权限 -->
				/perm/* = authc,perms[perm:all]
				
				/logout = authc,logout				
				/** = authc
			</value>
		</property>
		
		<!-- 配置logout后的跳转url -->
		<property name="filters">  
            <map>  
                <entry key="logout" value-ref="logoutFilter" />  
            </map>  
        </property>
	</bean>	

</beans>